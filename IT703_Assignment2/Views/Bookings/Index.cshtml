@model IEnumerable<IT703_Assignment2.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            >
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOut)
            </th>
            <th>
                Room Type
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NumGuest)
            </th>
            <th>
                RestaurantFee
            </th>
            <th>
                Room Fee
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @item.CheckIn
            </td>
            <td>
                @item.CheckOut
            </td>
            <td>
                @item.restaurantFee
            </td>
            <td>
                @if (item.RoomFee == 100)
                {
                    <a>SingleRoom</a>

                }
                else if (item.RoomFee == 150)
                {

                    <a>SuperiorRoom</a>
                }
                else
                {
                    <a>TwoBedRoom</a>
                }


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumGuest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paid)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.ReferenceNum">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReferenceNum">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReferenceNum">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
