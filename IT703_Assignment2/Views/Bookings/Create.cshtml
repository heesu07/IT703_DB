@model IT703_Assignment2.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<br />
<h4>MY Booking Information</h4>
<hr />

<p>Please Rember your ReferenceNumer to check your booking status in Cutomer page </p>

@if (Model.Paid)
{
    <p>Your booking was complete , please check your booking status in Customer page </p>

}
else
{
    <p>You need to pay to complete your Booking </p>
}

<h3>Customer information </h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReferenceNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.ReferenceNum
            </td>
            <td>
                @Model.FirstName
            </td>
            <td>
                @Model.LastName
            </td>
            <td>
                @Model.Phone
            </td>
            <td>
                @Model.Email
            </td>
            <td>
                @Model.Address
            </td>
        </tr>

    </tbody>
</table>

<h3>Booking information</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Room Type
            </th>
            <th>
                Room Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumGuest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParkingLot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @ViewBag.type
            </td>
            <td>
                @ViewBag.num
            </td>
            <td>
                @Model.NumGuest
            </td>
            <td>
                @Model.CheckIn
            </td>
            <td>
                @Model.CheckOut
            </td>
            <td>
                @Model.TotalFee
            </td>
            <td>
                @Model.ParkingLot
            </td>
            <td>
                @Model.Paid
            </td>
            <td>
                @if (!Model.Paid)
                {
                    <button data-toggle="modal" data-target="#myModa2" class="btn btn-outline-secondary">Pay</button>
                }
            </td>
        </tr>

    </tbody>
</table>



<div class="modal fade" id="myModa2" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Booking</h4>
            </div>
            <div class="modal-body">
                <form asp-controller="Bookings" asp-action="Create" method="post">


                    <input hidden name="ref1" value="@Model.ReferenceNum" />
                    <div class="form-group">
                        <input type="submit" value="PAY" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default" data-dismiss="modal" onclick="myFunction2()">Close</button>
            </div>
        </div>

    </div>
</div>


<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
